    "@types/jest": "^27.5.2",
    "@types/react": "^18.2.21 || >19",
    "jest": "^27.3.1",
    "prettier": "^2.5.1",
    "react": "^18.2.0 || >19",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^27.1.3"
  }
